```xml
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_import_form" model="ir.ui.view">
            <field name="name">import.form</field>
            <field name="model">pricelist.import</field>
            <field name="arch" type="xml">
                <form string="Import Pricelist">
                    <sheet>
                        <group>
                            <field name="excel_file" widget="binary" filename="filename" string="Upload Excel File" />
                            <field name="filename" invisible="1"/>
                        </group>
                        <footer>
                            <button name="import_pricelist" string="Import" type="object" class="btn-primary"/>
                            <button string="Cancel" class="btn-secondary" special="cancel"/>
                        </footer>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_import_pricelist" model="ir.actions.act_window">
            <field name="name">Import Pricelist</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">pricelist.import</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_import_form"/>
            <field name="target">new</field>
        </record>

        <menuitem id="menu_import_pricelist" name="Import Pricelist" parent="base.menu_sales" action="action_import_pricelist"/>
    </data>
</odoo>
